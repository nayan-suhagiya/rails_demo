<%= form_with(model: employee) do |form| %>
  
  <div>
    <%= form.label :username, style: "display: block" %>
    <%= form.text_field :username , class: %w(form-control) %>
    <% @employee.errors.full_messages_for(:username).each do |error| %>
      <div class="text-danger"><%= error %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name , class: %w(form-control) %>
    <% employee.errors.full_messages_for(:name).each do |error| %>
      <div class="text-danger"><%= error %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email , class: %w(form-control) %>
    <% employee.errors.full_messages_for(:email).each do |error| %>
      <div class="text-danger"><%= error %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :password, style: "display: block" %>
    <%= form.text_field :password , class: %w(form-control) %>
    <% employee.errors.full_messages_for(:password).each do |error| %>
      <div class="text-danger"><%= error %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :mobile, style: "display: block" %>
    <%= form.number_field :mobile , class: %w(form-control) %>
    <% employee.errors.full_messages_for(:mobile).each do |error| %>
      <div class="text-danger"><%= error %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :joining_date, style: "display: block" %>
    <%= form.date_field :joining_date , class: %w(form-control) %>
    <% employee.errors.full_messages_for(:joining_date).each do |error| %>
      <div class="text-danger"><%= error %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit class: %w(btn btn-primary mt-4) %>
  </div>
<% end %>
